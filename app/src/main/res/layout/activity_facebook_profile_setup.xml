<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookProfileSetupActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>

    <TextView
        android:id="@+id/tv_profileSetup"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_medium"
        android:text="Profile Setup"
        />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_below="@+id/tv_profileSetup"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/ic_account_circle_black" >

    </ImageView>

    <TextView
        android:id="@+id/tv_allFields"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:width="87.3dp"
        android:height="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Tap on your photo to change it"
        android:textColor="#494949"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rectangle"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:hint="Nickname"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/cbx_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Use this nickname for my profile"
        android:textSize="9.5sp"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignRight="@+id/et_name"
        android:buttonTint="#c300c0"
        android:layout_below="@+id/et_name">

    </CheckBox>

    <Button
        android:id="@+id/btn_continue"
        android:background="@drawable/purple_vibrant_rich"
        android:textColor="#ffffff"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_below="@+id/cbx_nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Continue" />
</RelativeLayout>