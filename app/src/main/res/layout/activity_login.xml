<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ebecef"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="136dp"
        android:layout_height="148dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_allFields"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"

        android:width="87.3dp"
        android:height="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Growth. Resilience. Wellness."
        android:textColor="#494949"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rectangle"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et_password"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:background="@drawable/button_rectangle"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignRight="@+id/et_email"
        android:layout_below="@+id/et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/purple_vibrant_rich"
        android:textColor="#ffffff"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Login" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facebook"
        android:background="#3b5997"
        android:textColor="#ffffff"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Facebook"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_below="@+id/btn_facebook"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="36dp"
            android:text="Don't have an account?"
            android:lineSpacingExtra="4.7sp"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="center"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:paddingLeft="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#c49327"
            android:lineSpacingExtra="4.7sp"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#c49327"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:text="Forgot Password?"
        android:fontFamily="@font/montserrat_medium"
        android:textAlignment="center"
        android:layout_below="@+id/linearLayout"
        />
    <!--    <com.facebook.login.widget.LoginButton-->
    <!--        android:id="@+id/login_button"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/tv_registerProfessional"-->
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:layout_marginTop="40dp"-->
    <!--         />-->

</RelativeLayout>