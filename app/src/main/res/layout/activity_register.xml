<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ebecef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_emailSignUp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="Email Sign Up"
        android:fontFamily="@font/montserrat_medium"
        />

    <TextView
        android:id="@+id/tv_allFields"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_emailSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:width="87.3dp"
        android:height="10dp"
        android:gravity="center"
        android:text="All fields are required"
        android:textColor="#494949"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_medium"
        tools:text="All fields are required" />

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_allFields"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:ems="10"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="6.7sp"
        android:hint="Email"
        android:textColor="#606a7b"
        android:textColorHighlight="#606a7b"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_register_password"
        android:background="#ffffff"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_register_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:hint="Password"
        android:textSize="14sp"
        android:lineSpacingExtra="6.7sp"
        android:textColor="#606a7b"
        android:textColorHighlight="#606a7b"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/et_confirmPassword"
        android:background="#ffffff"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:hint="Retype password"
        android:textSize="14sp"
        android:lineSpacingExtra="6.7sp"
        android:textColor="#606a7b"
        android:textColorHighlight="#606a7b"
        android:inputType="textEmailAddress"
        />


    <Button
        android:id="@+id/btn_register"
        android:background="@drawable/purple_vibrant_rich"
        android:textColor="#ffffff"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_below="@+id/et_confirmPassword"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:text="Sign up" />

    <LinearLayout
        android:id="@+id/signupText"
        android:layout_below="@+id/btn_register"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-------------------"
            android:textAlignment="center"
            android:textColor="#c49327" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:textSize="14sp"
            android:text="Or sign up using"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="center"
            android:textColor="#494949" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="        -------------------"
            android:textAlignment="center"

            android:textColor="#c49327" />
    </LinearLayout>
<!--    <Button-->
<!--        android:id="@+id/btn_login"-->
<!--        android:background="#3b5997"-->
<!--        android:textColor="#ffffff"-->
<!--        android:layout_width="363dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:textSize="16sp"-->
<!--        android:layout_below="@+id/signupText"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:text="Facebook" />-->
        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_facebook"
            android:background="#3b5997"
            android:textColor="#ffffff"
            android:layout_width="363dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:layout_below="@+id/signupText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Facebook"
            />
    <LinearLayout

        android:layout_below="@+id/btn_facebook"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="36dp"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="   Login"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#c49327" />
    </LinearLayout>


</RelativeLayout>