<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebecef"
    tools:context=".ResetPasswordActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>

    <TextView
        android:id="@+id/tv_resetPassword"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="112dp"
        android:layout_centerHorizontal="true"
        android:textColor="#333942"
        android:textSize="24dp"
        android:text="Reset Password"
        android:fontFamily="@font/montserrat_medium"
        />

    <TextView
        android:id="@+id/tv_allFields"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_resetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:width="87.3dp"
        android:height="10dp"
        android:gravity="center"
        android:text="All fields are required"
        android:textColor="#494949"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_medium"
        tools:text="All fields are required" />

    <EditText
        android:id="@+id/et_newPassword"
        android:hint="New Password"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:background="#ffffff"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_allFields"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium" />

    <EditText
        android:id="@+id/et_confirmPassword"
        android:hint="Re-type new password"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:background="#ffffff"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignRight="@+id/et_email"
        android:layout_below="@+id/et_newPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium" />

    <Button
        android:id="@+id/btn_resetSubmit"
        android:background="#c300c0"
        android:textColor="#ffffff"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:layout_below="@+id/et_confirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Submit" />

    <TextView
        android:id="@+id/tv_loginBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#c49327"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:text="Back to login page"
        android:fontFamily="@font/montserrat_medium"
        android:textAlignment="center"
        android:layout_below="@+id/btn_resetSubmit"
        />


</RelativeLayout>